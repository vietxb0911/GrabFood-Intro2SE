<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Shipper.MainShipperActivity">

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.grabfood.Shipper.MapsFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <LinearLayout
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant:"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/restaurant_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 Ly Chinh Thang, Phuong 4, Quan 5"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination:"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/Customer_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="227 Nguyen Van Cu, Phuong 4, Quan 5"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="76dp"
        android:layout_below="@id/address"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="57dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/orderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Order"/>

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Cancel"/>
    </LinearLayout>
</RelativeLayout>
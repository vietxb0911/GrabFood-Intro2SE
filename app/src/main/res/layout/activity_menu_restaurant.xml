<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnReturn"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iAvatar"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"></ImageView>

        <TextView
            android:id="@+id/btnTvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="120dp"
            android:layout_marginEnd="0dp"
            android:textSize="18sp"
            android:textColor="@color/design_default_color_primary"
            android:layout_toEndOf="@+id/iAvatar"
            android:textAlignment="center"
            android:text="Nhà hàng Food Circles">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnTvName"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/iAvatar"
            android:text="302A Tô Hiến Thành, Phường 15, Quận 10, Thành phố Hồ Chí Minh"></TextView>
    </RelativeLayout>

    <ListView
        android:id="@+id/lvFood"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="352dp"></ListView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddFood"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center|bottom"
        android:background="@drawable/plus"
        android:backgroundTint="#009900"
        />


</LinearLayout>